<% layout('layouts/boilerplate')-%>

<div id='map' class="mt-3" style='width: 100%; height: 400px;'></div>

<h1>All Campgrounds</h1>
<%for (let campground of campgrounds){%>
    <div class="card mb-2">
        <div class="row">
            <div class="col-md-4">
                <%if(campground.image.length){ %>
                    <img class="img-fluid "  src="<%=campground.image[0].url%>" crossorigin="anonymous">
                <% }else{ %>
                    <img class="img-fluid "  src="https://res.cloudinary.com/dkizthk7a/image/upload/v1711371191/Yelp-Camp/okydiqk1ys05tc4fh9vh.png"  crossorigin="anonymous" alt="">
                <% } %>
            </div>   
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title "><%=campground.title%></h2>
                    <p class="card-text"><%=campground.description%></p>
                    <p class="card-text">
                        <small class="text-body-secondary"><%=campground.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/campground/<%=campground._id%>">View <%=campground.title%></a>
                </div>
            </div>
        </div>
    </div>        
<%}%> 

<script>
    const mapBoxToken='<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds={features:<%-JSON.stringify(campgrounds)%>};
</script>

<script src="/Javascripts/clusterMap.js"> </script>