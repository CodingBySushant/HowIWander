<% layout('layouts/boilerplate')-%>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title ">Register</h1>
                    <form class="d-inline validate" action="/register" method="post"  novalidate  >
                        <div class="mb-3">
                            <label class="form-label" for="username">Enter Username</label>
                            <input class="form-control" name="username" id="username" autofocus  required>
                            <div class="valid-feedback"> <!-- This will just add a custom msg for valid feedback-->
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Enter Email</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Enter Password</label>
                            <input class="form-control" name="password" id="password" type="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success ">Sign Up</button>
                        
                    </form>
                    <a class="btn btn-danger" href="/campground">Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
